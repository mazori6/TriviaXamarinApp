<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TriviaXamarinApp.Views.SignUp">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Email:"/>
            <Entry Text="{Binding Email}" Placeholder="Enter Email"/>
            <Label Text="NickName:"/>
            <Entry Text="{Binding NickName}" Placeholder="Enter Nickname"/>
            <Label Text="Password:"/>
            <Entry Text="{Binding Password}" IsPassword="True" Placeholder="Enter Password"/>
            <Button Text="Create User"   x:Name="BackToLogIn" Command="{Binding RegisterCommand}"  VerticalOptions="EndAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>