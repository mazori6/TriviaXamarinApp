<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TriviaXamarinApp.Views.UserPage">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="Personal Info" FontSize="30" FontAttributes="Bold" HorizontalOptions="Center" />
            <Label Text="{Binding Email}" />
            <Label Text="{Binding NickName}" />
            <Label Text="{Binding Password}" />

            <Button Text="Start" x:Name="startBtn" Command="{Binding StartGameCommand}" VerticalOptions="EndAndExpand"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>